# ====================================
# HVAC Lead Generation Backend - Environment Configuration
# ====================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ====================================
# REQUIRED: Database Configuration
# ====================================
# Supabase PostgreSQL database connection
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# For Railway/production deployments, also set:
# SUPABASE_PROJECT_REF=your-project-ref  # Optional: Used by some tools


# ====================================
# REQUIRED: Security
# ====================================
# Encryption key for storing sensitive credentials (Accela secrets, Summit API keys)
# Generate a new key with:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
#
# IMPORTANT: Use the same key across deployments or encrypted data will be unreadable!

ENCRYPTION_KEY=your-fernet-encryption-key-here


# ====================================
# REQUIRED: Summit.AI CRM Configuration
# ====================================
# The Summit.AI (white-label HighLevel) CRM integration
# Get these from: https://thesummit.ai → Settings → API → Private Integration Token
#
# Note: These are stored in the agencies table, but also read from env as fallback

SUMMIT_API_KEY=your-summit-api-key-here
SUMMIT_LOCATION_ID=your-location-id


# ====================================
# REQUIRED: CORS Configuration
# ====================================
# Comma-separated list of allowed origins (no spaces!)
# Development: Include localhost ports for frontend dev servers
# Production: Include your Vercel deployment URLs

# Development:
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Production (Railway + Vercel):
# CORS_ORIGINS=https://hvac-liard.vercel.app,https://hvac-*.vercel.app,https://hvac-backend-production-11e6.up.railway.app


# ====================================
# OPTIONAL: API Server Configuration
# ====================================
# API server host and port
# Railway sets PORT automatically, so you usually don't need API_PORT in production

API_HOST=0.0.0.0
API_PORT=8000


# ====================================
# OPTIONAL: Environment
# ====================================
# Environment name for logging and health checks
# Values: development, staging, production

ENVIRONMENT=development


# ====================================
# OPTIONAL: Logging
# ====================================
# Log level for application logs
# Values: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_LEVEL=INFO


# ====================================
# OPTIONAL: External API Configuration
# ====================================
# Timeouts for external API calls (in seconds)

ACCELA_API_TIMEOUT=30
SUMMIT_API_TIMEOUT=30


# ====================================
# DEPLOYMENT-SPECIFIC VARIABLES
# ====================================
# These are typically set by the deployment platform:

# Railway automatically sets:
#   PORT - The port Railway assigns to your service
#   RAILWAY_ENVIRONMENT - The environment name (production, staging, etc.)
#   RAILWAY_SERVICE_NAME - The service name

# Vercel (frontend) sets:
#   VERCEL_URL - The deployment URL
#   VERCEL_ENV - Environment (production, preview, development)


